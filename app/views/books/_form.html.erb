<%= simple_form_for @book do |f| %>
    <%= f.input :title, label: "Könyv címe" %>
    <label>Válassz kategóriát</label>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Nyisd ki", class: "form-control") %>
    <%= f.input :description, label: "Leírás" %>
    <%= f.input :author, label: "Szerző" %>
    <%= f.submit 'Létrehoz', class: "btn btn-primary" %>
<% end %>