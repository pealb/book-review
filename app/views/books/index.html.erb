<div class="container-fluid">
    <h1>Könyvek</h1>
    <% if @books.count > 0 %>
        <table class="table">
            <thead>
                <tr>
                    <th>Cím</th>
                    <th>Szerző</th>
                    <th>Leírás</th>
                </tr>
            </thead>
            <tbody>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= link_to book.title, book_path(book) %></td>
                        <td><%= book.author %></td>
                        <td><%= book.description[0, 100] %>...</td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% else %>
        <h4>Nincs könyv az adatbázisban :(</h4>
    <% end %>
</div>

<script>
$(function () {
    $('[data-toggle="popover"]').popover()
})
</script>
